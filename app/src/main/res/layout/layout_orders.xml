<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout_celula"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:id="@+id/card_img_dish"
            app:cardCornerRadius="10dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/img_dishOrder_layout"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_itemOrder_layout"
            android:layout_width="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/txt_priceOrder_layout"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/card_img_dish"
            android:text="Jantinha 1"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txt_priceOrder_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="#E53935"
            android:text="10.00"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_desc_layout_celula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_itemOrder_layout"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/card_img_dish"
            android:text="Acompanhamento"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_ingredienteOrder_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_desc_layout_celula"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/card_img_dish"
            android:text="Contra-filÃ©" />

        <TextView
            android:id="@+id/lbl_qtd_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_ingredienteOrder_layout"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/card_img_dish"
            android:text="Quantidade:"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/txt_qtdOrder_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/lbl_qtd_item"
            android:layout_alignBottom="@id/lbl_qtd_item"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:layout_toEndOf="@id/lbl_qtd_item"
            android:text="3"
            android:textAlignment="center"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>