                <TextView
                    android:id="@+id/txt_qtd_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Escolha a quantidade \ne adicione ao seu carrinho"
                    android:textSize="16sp"
                    android:layout_below="@id/txt_marc_five"/>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_end_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:onClick="addCarButton"
                    android:layout_alignTop="@id/txt_desc_tree"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15sp"
                    app:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_add_shopping_cart_black_24dp" />

                <ImageButton
                    android:id="@+id/btn_remove_details"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@id/txt_qtd_details"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:onClick="removeClick"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/background_btn_details"
                    android:src="@drawable/ic_remove_32dp" />

                <TextView
                    android:id="@+id/txt_total_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#636161"
                    android:textStyle="bold"
                    android:layout_alignTop="@id/btn_remove_details"
                    android:layout_alignBottom="@id/btn_remove_details"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/btn_remove_details"
                    android:gravity="center"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btn_add_details"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignTop="@id/txt_total_details"
                    android:layout_alignBottom="@id/txt_total_details"
                    android:layout_marginStart="10dp"
                    android:onClick="addClick"
                    android:layout_toEndOf="@id/txt_total_details"
                    android:background="@drawable/background_btn_details"
                    android:src="@drawable/ic_add_32dp" />





                <TextView
                    android:id="@+id/txt_payment_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/btn_add_details"
                    android:layout_alignBottom="@id/btn_add_details"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
                    android:textColor="#43A047"
